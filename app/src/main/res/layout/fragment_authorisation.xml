<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gray_50">



    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tilAuthEmail"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/tilAuthPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/etAuthEmail"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tilAuthPassword"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/btAuthSignUp"
        android:layout_alignStart="@+id/tilAuthEmail"
        android:layout_marginBottom="16dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:id="@+id/etAuthPassword"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:text="@string/log_in"
        android:id="@+id/btAuthLogIn"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tilAuthEmail"
        android:layout_alignStart="@+id/tilAuthEmail"
        android:layout_marginTop="270dp" />

    <Button
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:text="@string/sign_up"
        android:id="@+id/btAuthSignUp"

        android:layout_alignTop="@+id/btAuthLogIn"
        android:layout_alignRight="@+id/tilAuthPassword"
        android:layout_alignEnd="@+id/tilAuthPassword" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:id="@+id/cbAuthRememberMe"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp" />

</RelativeLayout>
